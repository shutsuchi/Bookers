<div class= "page clearfix">
	<% if flash[:notice] %>
		<div class="notice-success">
			<%= flash[:notice] %>
		</div>
	<% end %>
	<h2 class="headline">
		Books
	</h2>

	<div class="table-box">
		<div class="clearfix title">
			<h5 class="table-title1">Title</h5>
			<h5 class="table-title2">Body</h5>
		</div>
		<div class="table">
			<table class="table">
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td class="title-cell"><%= book.title %></td>
						<td class="body-cell"><%= book.body %></td>
						<td class="link-cell"><%= link_to "Show", book_path(book) %></td>
						<td class="link-cell"><%= link_to "Edit", edit_book_path(book) %></td>
						<td class="link-cell"><%= link_to "Destroy", book_path(book), method: :delete %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>


	<div class="new">
		<h3 class="new-title">New Book</h3>
			<%= render "layouts/error_messages" %>

	</div>
</div>

